<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <TextView
        android:id="@+id/txtPerfilType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Perfil Comerciante"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/btnContatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contatos"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPerfilType"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/btnDespesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Despesas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnContatos"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/btnVendas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDespesas"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/btnEstoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estoque"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVendas"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>